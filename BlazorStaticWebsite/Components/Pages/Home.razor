@page "/"
@using Markdig
@using BlazorStatic
@inject BlazorStaticHelpers BlazorStaticHelpers
<div class="prose prose-invert 
[&_img]:inline-block
[&_#imglogo]:hidden 
">
@((MarkupString)htmlContent)
</div>
  
@code{
  string htmlContent = "";
  protected override void OnInitialized()
  {
  htmlContent = BlazorStaticHelpers.ParseMarkdownFile("README.md");
  htmlContent = htmlContent.Replace("./BlazorStaticWebsite/Content/Docs/","docs/");
  }
}